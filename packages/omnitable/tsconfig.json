{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "skipLibCheck": true,
    "incremental": true,
    "lib": ["ESNEXT", "DOM"],
    "moduleResolution": "bundler",
    "declaration": true,
    "emitDeclarationOnly": true,
    "strict": false,
    "strictNullChecks": false,
    "outDir": "dist",
    "baseUrl": ".",
    "isolatedModules": true,
    "esModuleInterop": true,
    "importHelpers": true,
    "jsx": "react-jsx",
    "allowImportingTsExtensions": true,
    "paths": {
      "@/*": ["./src/*"]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
  },
  "include": ["../../typings", "src"]
}
