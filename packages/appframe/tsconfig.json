{
	"compilerOptions": {
		"target": "ESNext",
		"module": "ESNext",
		"skipLibCheck": true,
		"lib": ["ESNEXT", "DOM"],
		"moduleResolution": "bundler",
		"declaration": true,
		"emitDeclarationOnly": true,
		"strict": false,
		"outDir": "dist",
		"baseUrl": "../",
		"isolatedModules": false,
		"esModuleInterop": true,
		"importHelpers": true,
		"jsx": "react-jsx",
		"allowImportingTsExtensions": true,
		"paths": {
			"@/*": ["./src/*"]
		},
		"emitDecoratorMetadata": true,
		"experimentalDecorators": true
	},
	"include": ["../../typings", "src", "build"],
	"ts-node": {
		"compilerOptions": {
			"module": "commonjs"
		}
	}
}
